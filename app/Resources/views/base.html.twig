<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}CNPNet{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.2/css/bootstrap-theme.min.css">
        {% endblock %}
    </head>
    <body>
        <!-- Header -->
        <div id="top-nav" class="navbar navbar-inverse navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-toggle"></span>
                    </button>
                    <a class="navbar-brand" href="#">CNPnet</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

                                <a class="dropdown-toggle" role="button" data-toggle="dropdown" href="#">
                                    <i class="glyphicon glyphicon-user"></i>   {{ app.user.username }} <span class="caret"></span></a>
                                <ul id="g-account-menu" class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="{{ path('fos_user_security_logout') }}">
                                            <i class="glyphicon glyphicon-lock"></i>
                                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                                        </a>
                                    </li>
                                </ul>
                            {% else %}
                                <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                            {% endif %}
                        </li>
                    </ul>
                </div>
            </div><!-- /container -->
        </div>
        <!-- /Header -->

        <div class="container">

            <div class="row menu">
                <div class="col-sm-3">
                    <h3><i class="glyphicon glyphicon-briefcase"></i> Menu</h3>
                    <hr>
                    <ul class="nav nav-stacked">
                        <li><a href="{{ path('doc_homepage') }}"><i class="glyphicon glyphicon-home"></i> Accueil</a></li>
                        <li class="dropdown">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="{{ path('reseau_index') }}">Réseaux <b class="caret"></b></a>
                            {{ render(controller("DocBundle:Reseau:menu")) }}
                        </li>
                        <li><a href="{{ path('parametrage_index') }}">Paramètrages</a></li>
                        <li><a href="{{ path('parametrage_import_csv') }}">Charger un CSV</a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="{{ path('reseau_index') }}">Gestion des réseaux</a></li>
                            <li><a href="{{ path('user_homepage') }}"><i class="glyphicon glyphicon-user"></i> Utilisateurs</a></li>
                        {% endif %}
                    </ul>
                    <hr>
                </div>
                <div class="col-sm-9">
                    {% block body %}

                    {% endblock %}
                </div>

            </div>

        </div><!--/container-->

        <footer class="text-center">
            <p>CNPNet © {{ 'now'|date('Y') }}.</p>
        </footer>


        {% block javascripts %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
            <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
        {% endblock %}
    </body>
</html>
